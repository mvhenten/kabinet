{
  "name": "kabinet",
  "version": "1.0.0",
  "description": "Observable key-value stores",
  "main": "dist/store.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "clean": "rm -rf dist/bundle.js node_modules",
    "fix": "prettier -w src/",
    "test": "npm run test:prettier && npm run test:eslint && npm run test:unit",
    "test:eslint": "eslint src",
    "test:unit": "ava src/",
    "test:prettier": "prettier -c src/",
    "prepare:demo": "npm pack && cd kabinet-demo && npm install && cd ..",
    "run:demo": "cd kabinet-demo && npm run dev",
    "compile": "tsc",
    "prepublishOnly": "npm run compile"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mvhenten/kabinet.git"
  },
  "keywords": [
    "flux",
    "store",
    "observable"
  ],
  "author": "Matthijs van Henten <matthijs@c9.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mvhenten/kabinet/issues"
  },
  "homepage": "https://github.com/mvhenten/kabinet#readme",
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ]
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 4,
    "singleQuote": false
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "overrides": [],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {}
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.42.1",
    "@typescript-eslint/parser": "^5.42.1",
    "ava": "^5.0.1",
    "eslint": "^8.27.0",
    "ts-node": "^10.9.1",
    "ts-sinon": "^2.0.2",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "prettier": "^2.7.1"
  }
}
